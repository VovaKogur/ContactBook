@model Contact

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Contact Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="border p-3 mt-4">
            <div class="form-floating py-2 col-12">
                <label class="form-label py-0">Name</label>
                <div class="form-control border-0 shadow">@Model.Name</div>
            </div>

            <div class="form-floating py-2 col-12">
                <label class="form-label py-0">Surname</label>
                <div class="form-control border-0 shadow">@Model.Surname</div>
            </div>

            <div class="form-floating py-2 col-12">
                <label class="form-label py-0">Email</label>
                <div class="form-control border-0 shadow">@Model.Email</div>
            </div>

            <div class="form-floating py-2 col-12">
                <label class="form-label py-0">Phone Number</label>
                <div class="form-control border-0 shadow">@Model.PhoneNumber</div>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <a asp-controller="Contact" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
